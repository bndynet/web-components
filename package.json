{
  "name": "@bndynet/web-components",
  "version": "1.1.0",
  "description": "Web components based on bootstrap",
  "main": "dist/web-components.umd.js",
  "module": "dist/web-components.es5.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint ./src/**/*.ts",
    "prebuild": "rimraf dist docs",
    "build": "tsc && rollup --config ./rollup.config.ts && npm run docs",
    "docs": "typedoc --theme ./node_modules/@bndynet/typedoc-default-themes/bin/default --out docs/api --mode file",
    "test": "jest --coverage",
    "watch": "rollup --config ./rollup.config.ts -w",
    "start": "concurrently --kill-others \"npm run watch\" \"npm run site-serv\"",
    "site-serv": "npm run docs && npm run test && lite-server",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "predeploy-gh-pages": "ts-node tools/gh-pages-prepare",
    "deploy-gh-pages": "npm run predeploy-gh-pages && ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "init": "ts-node tools/init.ts",
    "prepublishOnly": "ts-node tools/inject-copyright"
  },
  "keywords": [
    "typescript",
    "library",
    "sass",
    "typescript library",
    "UMD",
    "ES5"
  ],
  "author": {
    "name": "Bendy Zhang",
    "email": "zb@bndy.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bndynet/web-components.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@bndynet/typedoc-default-themes": "^0.5.1",
    "@commitlint/cli": "^7.1.2",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@types/jest": "^23.3.12",
    "@types/node": "^12.11.7",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "autoprefixer": "^9.4.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jest-config": "^23.6.0",
    "jest-transform-stub": "^1.0.0",
    "jsdom": "13.1.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^8.1.0",
    "lite-server": "^2.5.4",
    "node-sass": "^4.11.0",
    "postcss": "^7.0.14",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-sass": "^1.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^4.0.2",
    "rollup-plugin-typescript2": "^0.18.1",
    "semantic-release": "^15.9.16",
    "ts-jest": "^24.1.0",
    "ts-node": "^7.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config ./configs/commitlint.config.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --config ./configs/prettier.config.js --write",
      "git add"
    ]
  },
  "dependencies": {
    "lit-element": "^2.2.1"
  }
}
